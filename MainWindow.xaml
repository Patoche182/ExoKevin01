<Window x:Class="ExoKevin01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExoKevin01"
        mc:Ignorable="d"
        Title="Jour de semaine" Height="250" Width="400" Background="DarkGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Background="#FF48079A">
            <TextBlock  Height="40" Background="Aquamarine" Text="Ecrire un nombre (entre 1 et 7) :" Width="220" Margin="20,20,20,20" HorizontalAlignment="Center" VerticalAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Auto" Padding="10,10,10,10"/>
            <TextBox x:Name="inputUser" Width="200">

            </TextBox>
            <Button Content="Valider" Width="100" Margin="10,5" Click="Button_Click" Background="Aquamarine" FontFamily="Bahnschrift SemiBold" FontSize="16" />

        </StackPanel>

    </Grid>
</Window>
